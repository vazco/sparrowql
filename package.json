{
  "private": true,
  "scripts": {
    "coverage": "jest --coverage",
    "coverage:report": "codecov",
    "lint": "npm run lint:code && npm run lint:types",
    "lint:code": "eslint .",
    "lint:types": "tsc --build tsconfig.global.json",
    "build": "tsc --build tsconfig.build.json",
    "postinstall": "lerna bootstrap && npm run build",
    "test": "jest"
  },
  "dependencies": {
    "babel-eslint": "8.2.6",
    "codecov": "3.6.5",
    "eslint": "5.4.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-config-vazco": "4.0.0",
    "eslint-plugin-babel": "5.1.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-vazco": "1.0.0",
    "graphql": "15.4.0",
    "jest": "23.5.0",
    "lerna": "3.4.3",
    "mongodb": "3.1.3",
    "prettier": "1.14.2",
    "typescript": "4.0.3",
    "uuid": "3.3.2"
  },
  "jest": {
    "coverageReporters": [
      "html",
      "lcovonly",
      "text-summary"
    ],
    "globalSetup": "./__mongo__/setup.js",
    "globalTeardown": "./__mongo__/teardown.js",
    "moduleNameMapper": {
      "^sparrowql([^/]*)(.*)$": "<rootDir>/packages/sparrowql$1/lib$2"
    },
    "testEnvironment": "./__mongo__/environment.js"
  },
  "name": "sparrowql-public"
}
